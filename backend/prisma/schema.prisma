generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Car {
  id            Int      @id @default(autoincrement())
  plate         String   @unique
  model         String
  color         String
  owner         String
  damage        Int
  fuel          Int
  locked        Boolean
  positionX     Float
  positionY     Float
  positionZ     Float
  purchaseDate  DateTime @default(now())
}
